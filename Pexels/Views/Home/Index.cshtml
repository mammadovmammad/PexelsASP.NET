    <main>
        <div class="home-content m-container">
            <div class="title">
                <h4>Pulsuz Foto şəkil</h4>
            </div>
            
            <div class="photos">
                <div class="row">

                    @{
                        int count = 3;
                        int inc = 0;
                    }
                    @for (int i =0; i < count; i++)
                    {
                        <div class="col-lg-4 photos-column">

                            @if (i == 0)
                            {
                                for (int k = 0; k < 9; k++)
                                {

                                    <div class="image-div mb-3">
                                        <a href=@Url.Action("index","Photosingle",new {id=@Model.Photos[i * count + k + inc].Id})>
                                            <img src="/Public/image/@Model.Photos[i * count + k + inc].Link" alt="">
                                        </a>
                                        <div class="photo-buttons">
                                            <a href=""><i class="fas fa-plus-circle"></i></a>
                                            <a href="" class="right-like-button"> <i class="far fa-heart"></i></a>
                                        </div>
                                    </div>


                                }
                            }
                            else
                            {
                                for (int k = 0; k < 9; k++)
                                {

                                    <div class="image-div mb-3">
                                        <a href=@Url.Action("index","Photosingle",new {id=@Model.Photos[i * count + k + inc].Id})>
                                            <img src="/Public/image/@Model.Photos[i * count + k + inc].Link" alt="">
                                        </a>
                                        <div class="photo-buttons">
                                            <a href=""><i class="fas fa-plus-circle"></i></a>
                                            <a href="" class="right-like-button"> <i class="far fa-heart"></i></a>
                                        </div>
                                    </div>
                                }
                                inc++;
                            }

                        </div>
                    }
                </div>
            </div>
            
            

