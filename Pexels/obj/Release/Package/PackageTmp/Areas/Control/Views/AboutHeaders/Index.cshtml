@model IEnumerable<Pexels.Models.AboutHeaders>

@{
    ViewBag.Title = "Haqqımızda Başlıq";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HeadTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadBackground)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HeadTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HeadText)
        </td>
        <td>
           <img src="~/Public/image/@item.HeadBackground" width="150px"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
