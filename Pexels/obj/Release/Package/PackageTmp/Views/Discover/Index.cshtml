@model Pexels.Models.VwModel
@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_PartLayout.cshtml";
}



<!--Discover Section Start-->
<section >
    <div class="container-fluid" style="padding: 0 8%;">
        <!--Content Title Start-->
        <div class="title-discover">
            <h3>@Model.DiscoverHeader.Title</h3>
            <p>@Model.DiscoverHeader.Desc</p>
        </div>
        <!--Content Title End-->

        <!--Cards Collection Start-->
        <div>
            <div class="row">
                @foreach (var item in Model.Categories)
                {
                    <div class="col-lg-4 collections">
                        <div class="card text-center" style="max-width: 20rem;margin:0 auto;">
                            <a href="@Url.Action("Index", "Collections", new {id = item.Id})">
                                <img class="card-img-top" src="/Public/UserImage/@item.Image">
                            </a>
                            <div class="card-body">
                                <p class="card-text collections-body">
                                    <h5>@item.Category1</h5>
                                    <span>@item.Photos.Count() Şəkil</span>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!--Cards Collection End-->
    </div>
</section>
<!--Discover Section End-->
